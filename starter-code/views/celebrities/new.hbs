<h2>Add Celebrity</h2>
<div class="error">{{error}}</div>
<form method="POST" action="/celebrities">

    <label for="theName">Name:</label>
    <input name="theName" type="input" required />

    <label for="theOccupation">Occupation:</label>
    <input name="theOccupation" type="input" required />

    <label for="theCatchPhrase">Catch Phrase:</label>
    <input name="theCatchPhrase" type="input" required />

    <button>Submit</button>

</form>